<div class="main">
  <div class="container">
    <h1>お問い合わせ</h1>
    <%= form_tag("/contacts/create") do %>
      <div class="form">
        <div class="form-body">
          <% @contact.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>メールアドレス</p>
          <input name="email" value="<%= @contact.email %>">
          <p>お問い合わせ内容</p>
          <textarea name="content"><%= @contact.content %></textarea>

          <input type="submit" value="送信">
        </div>
      </div>
    <% end %>
  </div>

</div>
